#
# ~/.bashrc
#

HISTCONTROL=ignoreboth

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

[[ -z "$FUNCNEST" ]] && export FUNCNEST=100          # limits recursive functions, see 'man bash'

if [ -f ~/.bash_aliases ]; then
    . ~/.bash_aliases
fi

if [ -f ~/.bash_aliases_private ]; then
    . ~/.bash_aliases_private
fi

bind '"\e[1;5A": history-search-backward'
bind '"\e[1;5B": history-search-forward'

eval "$(oh-my-posh init bash --config ~/.config/oh-my-posh/shell_theme.json)"

# Cache rust builds
export CARGO_INCREMENTAL=0

[[ "$(whoami)" = "root" ]] && return

# Python stuff is in there and sccache for distributed compilation and cache
export PATH=~/.config/sccache/:~/.local/bin:$PATH

# Brrrr, file explorer
source ~/.config/broot/launcher/bash/br

# Command hoarder
source /usr/share/doc/hoard/hoard.bash

# Enhanced history
[[ -f /usr/share/bash-preexec/bash-preexec.sh ]] && source /usr/share/bash-preexec/bash-preexec.sh
eval "$(atuin init bash --disable-up-arrow)"

# Bruh
export QSYS_ROOTDIR="/home/kloud/QUARTUS/18.1/quartus/sopc_builder/bin"

# Rootless docker
export DOCKER_HOST=unix://$XDG_RUNTIME_DIR/docker.sock

